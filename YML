name: Deploy Static Site to GitHub Pages

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]
  workflow_dispatch:  # Manual trigger

# Required permissions
permissions:
  contents: read
  pages: write
  id-token: write

# Prevent concurrent runs
concurrency:
  group: "pages"
  cancel-in-progress: true

jobs:
  deploy:
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v6  # Latest: Fixes deprecation

      - name: Setup Pages
        id: pages
        uses: actions/configure-pages@v5  # Latest: Handles any config needs

      - name: Upload artifact
        uses: actions/upload-pages-artifact@v4  # Latest: No more v3 internal deps
        with:
          path: .  # Uploads entire root (your index.html, assets/, etc.)

      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4  # Latest: Matches artifact v4
